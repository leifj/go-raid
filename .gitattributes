# Auto detect text files and perform LF normalization
* text=auto

# Go source files
*.go text eol=lf

# Shell scripts
*.sh text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# YAML files
*.yaml text eol=lf
*.yml text eol=lf

# JSON files
*.json text eol=lf

# Configuration files
.gitignore text eol=lf
.gitattributes text eol=lf
.env.example text eol=lf

# Binary files
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
